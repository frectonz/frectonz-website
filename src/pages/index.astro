import Projects from "../components/Projects";

const socials = [
  {
    name: "Twitter",
    link: "https://twitter.com/frectonz",
    icon: FaTwitter,
  },
  {
    name: "Github",
    link: "https://github.com/frectonz",
    icon: FaGithub,
  },
  {
    name: "Telegram",
    link: "https://t.me/frectonz",
    icon: FaTelegram,
  },
  {
    name: "Email",
    link: "mailto:contact@frectonz.et",
    icon: MdOutlineAlternateEmail,
  },
];

const languages = [
  {
    name: "Rust",
    link: "https://github.com/frectonz?tab=repositories&language=rust",
    icon: SiRust,
  },
  {
    name: "Elm",
    link: "https://github.com/frectonz?tab=repositories&language=elm",
    icon: SiElm,
  },
  {
    name: "TypeScript",
    link: "https://github.com/frectonz?tab=repositories&language=typescript",
    icon: SiTypescript,
  },
  {
    name: "JavaScript",
    link: "https://github.com/frectonz?tab=repositories&language=javascript",
    icon: SiJavascript,
  },
  {
    name: "Python",
    link: "https://github.com/frectonz?tab=repositories&language=python",
    icon: SiPython,
  },
  {
    name: "Go",
    link: "https://github.com/frectonz?tab=repositories&language=go",
    icon: SiGo,
  },
  {
    name: "OCaml",
    link: "https://github.com/frectonz?tab=repositories&language=ocaml",
    icon: SiOcaml,
  },
  {
    name: "Nix",
    link: "https://github.com/frectonz?tab=repositories&language=nix",
    icon: SiNixos,
  },
  {
    name: "Ruby",
    link: "https://github.com/frectonz?tab=repositories&language=ruby",
    icon: SiRuby,
  },
];

const essays = [
  {
    name: "The Glory of Determinism",
    slug: "the-glory-of-determinism",
    publishedOn: "2023-04-06",
  },
  {
    name: "Frameworks and Normalcy",
    slug: "frameworks",
    publishedOn: "2023-10-17",
  },
  {
    name: "Are Equbs Bad?",
    slug: "are-equbs-bad",
    publishedOn: "2024-05-16",
  },
  {
    name: "Sleep is the Enemy",
    slug: "sleep-is-the-enemy",
    publishedOn: "2024-05-30",
  },
  {
    name: "Blogging",
    slug: "blogging",
    publishedOn: "2025-04-07",
  },
  {
    name: "Progress and Poverty",
    slug: "progress-and-poverty",
    publishedOn: "2025-04-08",
  },
  {
    name: "More Engineering",
    slug: "more-engineering",
    publishedOn: "2025-04-10",
  },
];

const stories = [
  {
    name: "Teleportation",
    slug: "teleportation",
    publishedOn: "2023-08-20",
  },
  {
    name: "Children of the Real",
    slug: "children-of-the-real",
    publishedOn: "2025-04-09",
  },
];

const oss = [
  {
    name: "GQL",
    description: "SQL like language to perform queries on .git files",
    prs: "https://github.com/AmrDeveloper/GQL/pulls?q=is%3Apr+author%3Afrectonz",
  },
  {
    name: "cookie-cutter",
    description: "Cookie cutter modeling built as a demo project for zoo.dev",
    prs: "https://github.com/KittyCAD/cookie-cutter/pulls?qa=is%3Apr+author%3Afrectonz",
  },
  {
    name: "fend",
    description: "Arbitrary-precision unit-aware calculator",
    prs: "https://github.com/printfn/fend/pulls?q=is%3Apr+author%3Afrectonz",
  },
  {
    name: "crates-build-env",
    description: "Build environment for third-party Rust crates",
    prs: "https://github.com/rust-lang/crates-build-env/pulls?q=is%3Apr+author%3Afrectonz",
  },
  {
    name: "muc",
    description: "Visualize your most used commands",
    prs: "https://github.com/nate-sys/muc/pulls?q=is%3Apr+author%3Afrectonz",
  },
];

const languageForks = [
  {
    name: "better-go",
    description:
      "The go compiler with a try, an unwrap and a new append statement.",
    code: "https://github.com/frectonz/better-go",
    changes: "https://github.com/frectonz/better-go/commits/second-try/",
  },
  {
    name: "cpython",
    description: "The python interpreter forked to rename some keywords.",
    code: "https://github.com/frectonz/cpython",
    changes:
      "https://github.com/python/cpython/compare/main...frectonz:cpython:main",
  },
  {
    name: "php-src",
    description:
      "The php interpreter forked to rename some keywords and remove the dollar sign.",
    code: "https://github.com/frectonz/php-src",
    changes:
      "https://github.com/php/php-src/compare/master...frectonz:php-src:master",
  },
  {
    name: "go",
    description:
      "The Go programming language with keywords renamed and this one supports ethiopic keywords.",
    code: "https://github.com/frectonz/go",
    changes: "https://github.com/frectonz/go/commits/bababooey/",
  },
  {
    name: "TypeScript",
    description: "The TypeScript with some new keywords.",
    code: "https://github.com/frectonz/TypeScript",
    changes:
      "https://github.com/microsoft/TypeScript/compare/main...frectonz:TypeScript:main",
  },
];

const nixpkgs = [
  {
    name: "medium-to-markdown",
    description: "A medium to markdown parser packaged for Nix.",
    code: "https://github.com/frectonz/medium-to-markdown",
  },
  {
    name: "dotree",
    description: "The dotree command runner packaged for Nix.",
    code: "https://github.com/frectonz/dotree",
  },
  {
    name: "rescript-lsp",
    description: "The ReScript Language Server packaged for Nix.",
    code: "https://github.com/frectonz/rescript-lsp-nix",
  },
  {
    name: "scope-tui",
    description:
      "A simple oscilloscope/vectorscope/spectroscope for your terminal packaged for Nix.",
    code: "https://github.com/frectonz/scope-tui-nix",
  },
  {
    name: "monaspace",
    description: "The monaspace font from GitHub packaged for Nix.",
    code: "https://github.com/frectonz/monaspace",
  },
  {
    name: "Senamirmir Fonts",
    description: "The Senamirmir ethiopic fonts packaged for Nix.",
    code: "https://github.com/frectonz/senamirmir-nixified",
  },
];
---

<Layout title="Frectonz">
  <header class="my-10 grid intro-about-grid gap-5 min-h-96">
    <div class="min-h-[300px] border border-black flex flex-col box-shadow">
      <section
        class="p-4 flex-grow flex flex-col sm:flex-row gap-4 items-start justify-start"
      >
        <img
          src="me.webp"
          class="w-28 h-28 rounded-full border border-black"
          alt="fraol slightly looking up stroking his chin and wearing a fedora hat, leather jacket and a blue shirt"
        />
        <h1 class="text-4xl">
          Hi, I'm
          <span class="font-serif font-bold">fraol</span> or
          <br />
          <span class="font-serif font-bold">frectonz</span> on the internet.
        </h1>
      </section>
      <section class="p-4 border-t border-black flex gap-5 items-center">
        {
          socials.map((social) => (
            <a
              href={social.link}
              title={social.name}
              aria-label={`Checkout frectonz's ${social.name.toLowerCase()} profile`}
              class="hover:scale-110"
            >
              <social.icon size="2rem" />
            </a>
          ))
        }
      </section>

      <section class="p-4 border-t border-black flex gap-5 items-center">
        <p>
          I also have a <a
            href="https://telegram.me/s/thefrectonz"
            class="bg-black text-white p-0.5">telegram channel</a
          >.
        </p>
      </section>
    </div>

    <section
      class="min-h-[300px] p-4 border border-black box-shadow bg-black text-white"
    >
      <h1 class="text-3xl font-bold pb-4">About Me</h1>
      <p class="text-xl">
        I have been interested in technology and its ability to influence our
        life for as long as I remember. This interest has lead into the world of
        software development which I enjoy very much.
      </p>
    </section>
  </header>

  <article>
    <h1 class="font-serif text-3xl mb-4">Programming Languages I work with</h1>
    <div class="flex gap-2 flex-wrap">
      {
        languages.map((lang) => (
          <a
            href={lang.link}
            title={lang.name}
            class="hover:scale-110"
            target="_blank"
          >
            <lang.icon size="2rem" />
          </a>
        ))
      }
    </div>
  </article>

  <section class="my-10">
    <h1 class="text-4xl font-serif mb-5 font-bold">Projects</h1>
    <p>My projects.</p>
    <Projects client:load />
    <a
      href="https://github.com/frectonz?tab=repositories"
      class="font-serif underline text-xl">See more on GitHub</a
    >
  </section>

  <section class="my-10">
    <h1 class="text-4xl font-serif mb-5 font-bold">
      Open-source Contributions
    </h1>
    <p>My OSS contributions.</p>
    <div class="py-5 flex gap-5 overflow-x-auto">
      {
        oss.map((p) => (
          <div class="min-w-[400px] w-[400px] flex flex-col border border-black box-shadow">
            <div class="p-4">
              <h1 class="font-serif text-xl font-bold">{p.name}</h1>
            </div>

            <div class="p-4 border-t border-black flex-grow">
              <p class="font-serif">{p.description}</p>
            </div>

            <div class="p-4 flex justify-end">
              <a class="underline" href={p.prs}>
                View PRs
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <section class="my-10">
    <h1 class="text-4xl font-serif mb-5 font-bold">Language Forks</h1>
    <p>
      I also like forking the codebases of some popular programming languages
      and changing the names of some keywords and adding some new operations to
      them.
    </p>
    <div class="py-5 flex gap-5 overflow-x-auto">
      {
        languageForks.map((l) => (
          <div class="min-w-[400px] w-[400px] flex flex-col border border-black box-shadow">
            <div class="p-4">
              <h1 class="font-serif text-xl font-bold">{l.name}</h1>
            </div>

            <div class="p-4 border-t border-black flex-grow">
              <p class="font-serif">{l.description}</p>
            </div>

            <div class="p-4 flex gap-4 justify-end">
              <a class="underline" href={l.code}>
                Source
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <section class="my-10">
    <h1 class="text-4xl font-serif mb-5 font-bold">Packaging stuff for Nix</h1>
    <p>
      Nix is a build system designed with a strong emphasis on reproducibility.
      It uses its own language, known as the Nix language, to define how
      packages should be built. Because Nix is not widely known or used, many
      developers don't create Nix build instructions for their projects. I enjoy
      writing Nix build instructions for such projects to help improve their
      build processes.
    </p>
    <div class="py-5 flex gap-5 overflow-x-auto">
      {
        nixpkgs.map((n) => (
          <div class="min-w-[400px] w-[400px] flex flex-col border border-black box-shadow">
            <div class="p-4">
              <h1 class="font-serif text-xl font-bold">{n.name}</h1>
            </div>

            <div class="p-4 border-t border-black flex-grow">
              <p class="font-serif">{n.description}</p>
            </div>

            <div class="p-4 flex gap-4 justify-end">
              <a class="underline" href={n.code}>
                Source
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <section class="my-10">
    <h1 class="text-4xl font-serif mb-5 font-bold">Essays</h1>
    <main>
      <ul class="grid grid-cols-1 gap-3">
        {
          essays.map((essay) => (
            <li class="border border-black box-shadow">
              <a
                href={`/essays/${essay.slug}`}
                class="flex justify-between transition-colors hover:bg-black hover:text-white"
              >
                <h1 class="p-2">{essay.name}</h1>
                <p class="border-l border-black p-2 font-serif">
                  {essay.publishedOn}
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </section>

  <section class="my-10">
    <h1 class="text-4xl font-serif mb-5 font-bold">Stories</h1>
    <main>
      <ul class="grid grid-cols-1 gap-3">
        {
          stories.map((story) => (
            <li class="border border-black box-shadow">
              <a
                href={`/stories/${story.slug}`}
                class="flex justify-between transition-colors hover:bg-black hover:text-white"
              >
                <h1 class="p-2">{story.name}</h1>
                <p class="border-l border-black p-2 font-serif">
                  {story.publishedOn}
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </section>
</Layout>

<style>
  .intro-about-grid {
    grid-template-columns: 60% 40%;
  }

  @media (max-width: 900px) {
    .intro-about-grid {
      grid-template-columns: 100%;
    }
  }

  * {
    animation: animate-in 1s ease-in-out;
  }

  @keyframes animate-in {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
